---
import events from "../data/timeline.json";
---

<section class="grid md:grid-cols-2 gap-6 p-6">
  {
    events.map((event) => (
      <div class="border-4 border-black bg-white p-4 shadow-[4px_4px_0_#000] hover:-translate-y-1 transition">
        <h2 class="text-2xl font-bold mb-2">{event.year}</h2>
        <p class="text-lg leading-snug">{event.text}</p>
      </div>
    ))
  }
</section>
