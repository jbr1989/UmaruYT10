---
const { t } = Astro.props;
---

<div class="timeline__event">
  <div class=`timeline__event__icon timeline__bg__${t.color}`>
    <div class="timeline__event__date">{t.year}</div>
  </div>
  <div class="timeline__event__content">
    <div class="timeline__event__title">{t.text}</div>
  </div>
  <div
    style="display:grid;background:black;align-content: center; cursor: pointer;"
  >
    <a href=`https://www.youtube.com/watch?v=${t.id}` target="_blank">
      <img src={t.thumbnail} style="width:100%;height:auto;" />
    </a>
  </div>
</div>
