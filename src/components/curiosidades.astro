---
const insights = (await import("../data/insights.json")).default;

const { videos, shorts } = Astro.props;

// Calcular videos por día de la semana
// Función para obtener el día de la semana en la zona horaria local
function getDayOfWeekLocal(dateString: string): number {
  const date = new Date(dateString);
  // getDay() ya convierte a la zona horaria local automáticamente
  // cuando se parsea una fecha UTC, JavaScript la convierte a hora local
  return date.getDay(); // 0 = Domingo, 1 = Lunes, etc.
}

const daysOfWeek = [
  "Domingo",
  "Lunes",
  "Martes",
  "Miércoles",
  "Jueves",
  "Viernes",
  "Sábado",
];
const dayCountsVideos: Record<number, number> = {};

[...videos].forEach((video) => {
  if (video.publishedAt) {
    const dayOfWeek = getDayOfWeekLocal(video.publishedAt);
    dayCountsVideos[dayOfWeek] = (dayCountsVideos[dayOfWeek] || 0) + 1;
  }
});

// Convertir a array y ordenar por cantidad (de mayor a menor)
const videosByDay = Object.entries(dayCountsVideos)
  .map(([day, count]) => ({
    day: parseInt(day),
    dayName: daysOfWeek[parseInt(day)],
    count,
  }))
  .sort((a, b) => b.count - a.count);

const dayCountsShorts: Record<number, number> = {};

[...shorts].forEach((video) => {
  if (video.publishedAt) {
    const dayOfWeek = getDayOfWeekLocal(video.publishedAt);
    dayCountsShorts[dayOfWeek] = (dayCountsShorts[dayOfWeek] || 0) + 1;
  }
});

const shortsByDay = Object.entries(dayCountsShorts)
  .map(([day, count]) => ({
    day: parseInt(day),
    dayName: daysOfWeek[parseInt(day)],
    count,
  }))
  .sort((a, b) => b.count - a.count);

// Calcular videos por año
function getYear(dateString: string): number {
  const date = new Date(dateString);
  return date.getFullYear();
}

const yearCountsVideos: Record<number, number> = {};
[...videos].forEach((video) => {
  if (video.publishedAt) {
    const year = getYear(video.publishedAt);
    yearCountsVideos[year] = (yearCountsVideos[year] || 0) + 1;
  }
});

const videosByYear = Object.entries(yearCountsVideos)
  .map(([year, count]) => ({
    year: parseInt(year),
    count,
  }))
  .sort((a, b) => b.year - a.year); // Ordenar por año (más reciente primero)

const yearCountsShorts: Record<number, number> = {};
[...shorts].forEach((video) => {
  if (video.publishedAt) {
    const year = getYear(video.publishedAt);
    yearCountsShorts[year] = (yearCountsShorts[year] || 0) + 1;
  }
});

const shortsByYear = Object.entries(yearCountsShorts)
  .map(([year, count]) => ({
    year: parseInt(year),
    count,
  }))
  .sort((a, b) => b.year - a.year); // Ordenar por año (más reciente primero)

const totalByYear: Record<number, { videos: number; shorts: number }> = {};
[...videos].forEach((video) => {
  if (video.publishedAt) {
    const year = getYear(video.publishedAt);
    if (!totalByYear[year]) {
      totalByYear[year] = { videos: 0, shorts: 0 };
    }
    totalByYear[year].videos++;
  }
});
[...shorts].forEach((short) => {
  if (short.publishedAt) {
    const year = getYear(short.publishedAt);
    if (!totalByYear[year]) {
      totalByYear[year] = { videos: 0, shorts: 0 };
    }
    totalByYear[year].shorts++;
  }
});

const allByYear = Object.entries(totalByYear)
  .map(([year, counts]) => ({
    year: parseInt(year),
    videos: counts.videos,
    shorts: counts.shorts,
    total: counts.videos + counts.shorts,
  }))
  .sort((a, b) => b.year - a.year);
