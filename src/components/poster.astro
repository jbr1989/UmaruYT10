---
const { title, subtitle, stats, image } = Astro.props;
---

<section
  id="poster"
  class="relative border-8 border-black bg-white rounded-2xl overflow-hidden p-8 text-center"
>
  {
    image && (
      <img
        src={image}
        alt={title}
        class="absolute inset-0 w-full h-full object-cover opacity-20"
      />
    )
  }
  <div class="relative z-10">
    <h1 class="text-4xl md:text-6xl font-extrabold">{title}</h1>
    {subtitle && <p class="text-lg mt-2 font-medium">{subtitle}</p>}
    <div class="grid grid-cols-3 gap-4 mt-6 justify-center">
      {
        stats?.map((s) => (
          <div class="border-4 border-black p-4 bg-white rounded-xl">
            <p class="text-sm uppercase">{s.label}</p>
            <p class="text-xl font-bold">{s.value}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
