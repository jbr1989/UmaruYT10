---
import PlacaDialog from "./placa-dialog.astro";
---

<section id="premio">
  <div class="container" style="padding:5%;">
    <h2>Una vez m치s muchas felicidades 游봅</h2>
    <div id="premio-message">
      <button id="" onclick="showPlaca(this)"
        ><span>Haz click aqu칤 para ver tu premio</span></button
      >
      <div id="placa">
        <div class="card" id="card"></div>
      </div>
    </div>
  </div>

  <style>
    #placa {
      display: none;
      background: transparent;
      text-align: center;
      margin: auto;
      width: 700px;
      border-radius: 5px;
      padding-inline: 1em;
      perspective: 1000px; /* Importante para efecto 3D */
      opacity: 0;
      transform: translateY(16px) scale(0.985);
      transition:
        opacity 600ms ease,
        transform 600ms cubic-bezier(0.22, 1, 0.36, 1);
    }

    #placa.visible {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    /* #dialog-placa::backdrop {
      background: rgba(0, 0, 0, 0.5);
    } */

    .card {
      height: calc (100% - 2em);
      max-height: 80vh;
      aspect-ratio: 1/1.65;
      /* height: 550px; */
      background-image: url("/img/placa.webp");
      background-size: cover;
      background-position: center;
      border-radius: 10px;
      transition: transform 0.1s;
      transform-style: preserve-3d;
      backface-visibility: hidden;
      will-change: transform;
      image-rendering: auto;
      margin: auto;
      box-shadow:
        0 10px 30px rgba(255, 255, 255, 0.925),
        0 2px 8px rgba(255, 255, 255, 0.15);
      position: relative;
    }

    #placa.visible .card::before {
      transition: transform 900ms ease-in-out 150ms;
      transform: translateX(120%);
    }
  </style>

  <script is:inline>
    function showPlaca(btn) {
      btn.style.display = "none";
      const placa = document.querySelector("#placa");
      placa.style.display = "block";
      // Forzar reflow para que la transici칩n ocurra al a침adir la clase
      // eslint-disable-next-line no-unused-expressions
      placa.offsetHeight;
      placa.classList.add("visible");
    }
  </script>

  <script>
    const card = document.getElementById("card");
    if (card) {
      document.addEventListener("mousemove", (e) => {
        const x = (e.clientX / window.innerWidth - 0.5) * 40; // rotaci칩n Y (mayor rango)
        const y = (e.clientY / window.innerHeight - 0.5) * -40; // rotaci칩n X (mayor rango)
        card.style.transform = `rotateY(${x}deg) rotateX(${y}deg)`;
      });

      document.addEventListener("mouseleave", () => {
        card.style.transform = `rotateY(0deg) rotateX(0deg)`;
      });
    }
  </script>

  <style>
    #premio {
      padding-block: 3em;
      min-height: 100vh;
      display: grid;
      align-items: center;
    }
    /* #placa-message {
      width: 500px;
      max-width: 100%;
      font-size: 1.5em;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
    } */

    #premio-message button {
      width: 90%;
      margin: auto;
      padding: 1em 2em;
      border: none;
      border-radius: 5px;
      font-weight: bold;
      letter-spacing: 5px;
      text-transform: uppercase;
      color: #2c9caf;
      transition: all 500ms;
      font-size: 15px;
      position: relative;
      overflow: hidden;
      outline: 2px solid #2c9caf;
      background: white;
      cursor: pointer;
    }

    #premio-message button:hover {
      transform: scale(1.1);
      outline: 2px solid #70bdca;
      box-shadow: 4px 5px 17px -4px #268391;
    }

    #premio-message button::before {
      content: "";
      position: absolute;
      left: -50px;
      top: 0;
      width: 0;
      height: 100%;
      background-color: #2c9caf;
      transform: skewX(45deg);
      z-index: -1;
      transition: width 1000ms;
    }
  </style>
</section>
